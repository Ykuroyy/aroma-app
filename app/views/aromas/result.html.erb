<div class="container mt-4">
  <div class="max-w-4xl mx-auto">
    <div class="card border-0 bg-white/80 backdrop-blur-sm shadow-2xl overflow-hidden">
      <!-- Header -->
      <div class="card-header text-white p-5 aroma-header-bg" data-aroma="<%= @aroma.name %>" style="background: linear-gradient(135deg, #059669 0%, #047857 100%);">
        <div class="text-center">
          <div class="d-flex align-items-center justify-content-center gap-3 mb-4">
            <i class="fas fa-leaf text-white" style="font-size: 2rem;"></i>
            <h1 class="fs-1 fw-bold mb-0 text-white" style="font-family: 'Playfair Display', serif; letter-spacing: 0.05em; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"><%= @aroma.name %></h1>
            <i class="fas fa-leaf text-white" style="font-size: 2rem;"></i>
          </div>
        </div>
      </div>

      <div class="card-body p-5">
        <div class="space-y-5">
          <!-- Keywords Section -->
          <div class="bg-white rounded-3xl p-4 shadow-lg border border-emerald-100">
            <div class="d-flex align-items-center gap-3 mb-3">
              <i class="fas fa-star text-emerald-600" style="font-size: 1.5rem;"></i>
              <h2 class="fs-2 fw-bold text-emerald-800 mb-0" style="font-family: 'Playfair Display', serif;">キーワード</h2>
            </div>
            <p class="fs-5 text-emerald-700 fw-medium mb-0 lh-base"><%= @aroma.keyword %></p>
          </div>

          <!-- Fortune Message Section -->
          <div class="space-y-3">
            <div class="d-flex align-items-center gap-3 mb-3">
              <i class="fas fa-magic text-emerald-600" style="font-size: 1.5rem;"></i>
              <h2 class="fs-2 fw-bold text-emerald-800 mb-0" style="font-family: 'Playfair Display', serif;">今日の運勢メッセージ</h2>
            </div>

            <div class="bg-white rounded-3xl p-4 shadow-lg border border-emerald-100">
              <p class="fs-5 text-emerald-700 lh-base fw-light mb-0"><%= @aroma.message %></p>
            </div>
          </div>

          <!-- Back Button -->
          <div class="text-center">
            <%= link_to root_path, class: "btn btn-lg px-5 py-3 rounded-pill text-white fw-medium fs-5 shadow-lg" do %>
              <i class="fas fa-arrow-left me-2"></i>
              アロマ一覧に戻る
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer decoration -->
    <div class="text-center mt-4">
      <div class="d-flex align-items-center justify-content-center gap-2 text-emerald-600 opacity-60">
        <i class="fas fa-leaf" style="font-size: 1.25rem;"></i>
        <span class="fs-6 fw-light">あなたの今日が素敵な一日になりますように</span>
        <i class="fas fa-leaf" style="font-size: 1.25rem;"></i>
      </div>
    </div>
  </div>
</div>

